<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/color_picker_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:padding="16dp"
    android:orientation="vertical" >

    <com.flask.colorpicker.ColorPickerView
        android:id="@+id/color_picker_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:alphaSlider="true"
        app:density="12"
        app:lightnessSlider="true"
        app:wheelType="FLOWER"
        app:lightnessSliderView="@+id/v_lightness_slider" />
    <!--<com.flask.colorpicker.slider.LightnessSlider
        android:id="@+id/v_lightness_slider"
        android:layout_width="match_parent"
        android:layout_height="40dp" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorText"
                android:text="From:"/>
            <android.support.v7.widget.CardView
                android:layout_width="@dimen/radius_color_preview_size"
                android:layout_height="@dimen/radius_color_preview_size"
                android:elevation="12dp"
                app:cardCornerRadius="20dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9">
                <ImageView
                    android:id="@+id/color_picker_left_preview"
                    android:src="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorText"
                android:text="Selected:"/>
            <ImageView
                android:id="@+id/color_picker_center_preview"
                android:src="@color/colorPrimary"
                android:layout_gravity="center"
                android:layout_width="@dimen/radius_color_preview_size"
                android:layout_height="@dimen/radius_color_preview_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorText"
                android:text="To:"/>
            <ImageView
                android:id="@+id/color_picker_right_preview"
                android:src="@color/colorPrimary"
                android:layout_width="@dimen/radius_color_preview_size"
                android:layout_height="@dimen/radius_color_preview_size" />
        </LinearLayout>
    </RelativeLayout>
    <!--<SeekBar
        android:id="@+id/radius_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"/>-->
    <com.project.yura.photoeditor.CustomViews.RadiusSlider
        android:id="@+id/v_radius_slider"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="40dp" />
</LinearLayout>