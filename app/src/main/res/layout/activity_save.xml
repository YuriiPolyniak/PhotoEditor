<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_save"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        tools:context="com.project.yura.photoeditor.SaveActivity">
    <RelativeLayout
        android:layout_height="@dimen/tab_bar_height"
        android:background="@color/colorAccent"
        android:layout_width="match_parent">
        <TextView
            style="@style/AppTheme.HeadLine"
            android:textAllCaps="false"
            android:text="Save &amp; Share"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:src="@drawable/back_arrow_button"
            android:onClick="returnBack"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:paddingEnd="14dp"
            android:paddingStart="14dp"
            android:src="@drawable/home_button"
            android:onClick="goHome"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_height="@dimen/tab_bar_border"
        android:layout_width="match_parent"
        android:background="@color/colorText"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:paddingTop="36dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ok_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:text="Saved Successfully"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:text="Next"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            android:text="Share on"/>
    </LinearLayout>
    <!--<GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:rowCount="2"
        android:columnCount="3">
        <ImageView
            style="@style/AppTheme.ShareIcon"
            android:src="@drawable/share_facebook"
            android:onClick="shareFacebook"/>
        <ImageView
            style="@style/AppTheme.ShareIcon"
            android:src="@drawable/share_vk"/>
        <ImageView
            style="@style/AppTheme.ShareIcon"
            android:src="@drawable/share_instagram"/>
        <ImageView
            style="@style/AppTheme.ShareIcon"
            android:src="@drawable/share_twitter"/>
        <ImageView
            style="@style/AppTheme.ShareIcon"
            android:src="@drawable/share_viber"/>
        <ImageView
            style="@style/AppTheme.ShareIcon"
            android:src="@drawable/share_somewhere"
            android:onClick="shareSomewhere"/>

    </GridLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:onClick="shareFacebook"
                android:src="@drawable/share_facebook"/>
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:onClick="shareVK"
                android:src="@drawable/share_vk"/>
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:onClick="shareInstagram"
                android:src="@drawable/share_instagram"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:onClick="shareTwitter"
                android:src="@drawable/share_twitter"/>
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:onClick="shareViber"
                android:src="@drawable/share_viber"/>
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:onClick="shareSomewhere"
                android:src="@drawable/share_somewhere"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
