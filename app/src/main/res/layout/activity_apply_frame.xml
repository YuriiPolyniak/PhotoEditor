<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/activity_apply_frame"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/colorPrimaryDark"
android:orientation="vertical"
tools:context="com.project.yura.photoeditor.ApplyFrameActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imageToEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>
    <ImageView
        android:id="@+id/preview_button"
        android:layout_width="@dimen/icon_button_size"
        android:layout_height="@dimen/icon_button_size"
        android:padding="@dimen/icon_button_margin"
        android:layout_marginBottom="6dp"
        android:src="@drawable/preview_button_dark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:onClick="previewClick"/>
    <ImageView
        android:id="@+id/resize_button"
        android:layout_width="@dimen/icon_button_size"
        android:layout_height="@dimen/icon_button_size"
        android:padding="@dimen/icon_button_margin"
        android:src="@drawable/resize_small"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:onClick="resizeClick" />

</RelativeLayout>
<LinearLayout
    android:id="@+id/layout_to_hide"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <SeekBar
        android:id="@+id/seek_bar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/preview_recycler"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="@dimen/tab_bar_border"
        android:layout_width="match_parent"
        android:background="@color/colorText"
        android:orientation="horizontal"/>
    <RelativeLayout
        android:layout_height="@dimen/tab_bar_height"
        android:background="@color/colorAccent"
        android:layout_width="match_parent">
        <TextView
            style="@style/AppTheme.HeadLine"
            android:text="frame"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:src="@drawable/cancel_icon"
            android:onClick="returnBack"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:paddingEnd="14dp"
            android:paddingStart="14dp"
            android:src="@drawable/ok_icon"
            android:onClick="saveResult"/>
    </RelativeLayout>
</LinearLayout>
</LinearLayout>
